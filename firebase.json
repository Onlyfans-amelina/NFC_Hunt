{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
  {
    "source": "/firebase-config.json",
    "destination": "/firebase-config.json"
  },
  {
    "source": "**",
    "destination": "/index.html"
  }
]

  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
